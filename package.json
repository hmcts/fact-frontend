    "tslint": "^6.1.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-middleware": "^7.4.5",
    "webpack-node-externals": "^3.0.0"
  },
  "packageManager": "yarn@4.10.3"
}
