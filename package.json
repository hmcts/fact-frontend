{
  "name": "fact-frontend",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=20.16.0"
  },
  "scripts": {
    "start": "NODE_ENV=production ts-node -r tsconfig-paths/register src/main/server.ts",
    "start:dev": "nodemon --config nodemon.json",
    "lint": "sass-lint -v -q && eslint . --ext .js,.jsx,.ts,.tsx",
    "build": "yarn webpack --config webpack.config.js",
    "build:prod": "NODE_ENV=production yarn webpack --mode production --config webpack.config.js",
    "test": "jest",
    "test:coverage": "jest --coverage -c jest.coverage.config.js",
    "test:a11y": "echo 'nope' && exit 0",
    "test:pa11y": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest -c jest.a11y.config.js --maxWorkers 15",
    "sonar-scan": "sonar-scanner",
    "fortifyScan": "./java/gradlew -p java fortifyScan",
    "test:smoke": "jest -c jest.smoke.config.js",
    "test:functional": "npm-run-all -scl test:codecept test:functional:report test:pa11y",
    "test:functional:report": "allure generate functional-output/functional/reports/ -c -o functional-output/functional/allure",
    "test:codecept": "NODE_TLS_REJECT_UNAUTHORIZED=0 codeceptjs run-workers 4 parallel --config ./src/test/functional/codecept.conf.js",
    "stub:api": "ts-node -r tsconfig-paths/register api/fact-api-stubs.ts",
    "cichecks": "yarn && yarn build && yarn lint && yarn test"
  },
  "dependencies": {
    "@hmcts/cookie-manager": "1.1.0",
    "@hmcts/info-provider": "^1.2.3",
    "@hmcts/nodejs-healthcheck": "^1.8.5",
    "@hmcts/nodejs-logging": "^4.0.4",
    "@hmcts/properties-volume": "^1.2.0",
    "@npmcli/fs": "^4.0.0",
    "@types/config": "^3.3.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/es6-promisify": "^6.0.4",
    "@types/express": "^5.0.1",
    "@types/glob": "^8.1.0",
    "@types/helmet": "^0.0.48",
    "@types/lodash": "^4.17.17",
    "@types/node": "^18.19.99",
    "@types/nunjucks": "^3.2.6",
    "@types/require-directory": "^2.1.6",
    "@types/serve-favicon": "^2.5.7",
    "applicationinsights": "^2.9.7",
    "autobind-decorator": "^2.4.0",
    "awilix": "^7.0.3",
    "axios": "1.12.2",
    "cacache": "^19.0.1",
    "config": "^3.3.12",
    "cookie-parser": "^1.4.7",
    "csrf-csrf": "^3.2.2",
    "express": "4.21.2",
    "express-nunjucks": "^3.1.2",
    "glob-parent": "6.0.2",
    "govuk-frontend": "^5.10.2",
    "helmet": "^4.6.0",
    "http-proxy-middleware": "^2.0.9",
    "i18next": "^21.10.0",
    "i18next-http-middleware": "^3.7.4",
    "jquery": "^3.7.1",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "nunjucks": "^3.2.4",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@codeceptjs/allure-legacy": "^1.0.2",
    "@codeceptjs/configure": "^1.0.0",
    "@cucumber/cucumber": "^12.0.0",
    "@playwright/test": "^1.52.0",
    "@types/chai-as-promised": "^8.0.2",
    "@types/cucumber": "^7.0.3",
    "@types/jest": "^29.5.14",
    "@types/jest-when": "^3.5.5",
    "@types/supertest": "^6.0.0",
    "allure-commandline": "^2.34.0",
    "allure-playwright": "^2.15.1",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "chokidar": "^3.6.0",
    "codeceptjs": "^3.7.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^29.7.0",
    "jest-when": "^3.7.0",
    "mini-css-extract-plugin": "^2.9.4",
    "nodemon": "^2.0.22",
    "npm-run-all2": "^5.0.0",
    "pa11y": "8.0.0",
    "playwright": "1.56.1",
    "request": "^2.88.2",
    "sass": "^1.94.2",
    "sass-lint": "^1.13.1",
    "sass-loader": "^16.0.6",
