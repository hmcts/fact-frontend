  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "outDir": "dist",
  }
