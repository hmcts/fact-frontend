{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2022",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useDefineForClassFields": false,
    "noEmit": true,
    "allowJs": true,
    "noImplicitAny": false,
    "outDir": "dist",
  },
  "include":[
      "**/*.ts"
   ],
}